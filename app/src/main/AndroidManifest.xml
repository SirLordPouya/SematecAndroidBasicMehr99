<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pouyaheydari.learning.sematecandroidbasicmehr99">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TestGlideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TestAsyncHttpClientActivity">
        </activity>
        <activity android:name=".TestHttpUrlConnectionActivity"></activity>
        <activity android:name=".TestRecyclerViewActivity" />
        <activity android:name=".TestHandlerActivity" />
        <activity android:name=".TestPermissionActivity" />
        <activity android:name=".TestMenuActivity" />
        <activity android:name=".TestAlertDialogActivity" />
        <activity android:name=".TestNotificationActivity" />
        <activity android:name=".TestSharedPreferencesActivity" />
        <activity
            android:name=".TestDialogActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity android:name=".TestImplicitIntentActivity" />
        <activity android:name=".TestIntentReceiverActivity" />
        <activity android:name=".TestDrawerLayoutActivity" />
        <activity android:name=".TestWebViewActivity" />
        <activity android:name=".MainActivity" />

        <service android:name=".TestService" />

        <receiver android:name=".TestBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.AIRPLANE_MODE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>